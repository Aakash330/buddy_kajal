                        android:layout_marginRight="10dp"
                        android:background="@drawable/button"
                        android:ems="8"
                        android:text="Back"
                        android:textColor="#fff" />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- TODO : Objective layout Starts -->
        <!--TODO : Objective layout Not in use yet-->
