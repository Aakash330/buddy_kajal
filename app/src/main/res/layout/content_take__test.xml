<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/backk"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".student.Take_Test"
    tools:showIn="@layout/activity_take__test">
    <LinearLayout
        android:orientation="vertical"
        android:background="#b7ede7a6"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:visibility="gone"
            android:padding="5dp"
            android:id="@+id/inputSearch"
            android:layout_width="wrap_content"
            android:background="@drawable/card"
            android:layout_height="wrap_content"
            android:hint="Search By Book Name"
            android:inputType="textVisiblePassword"/>
        <LinearLayout

            android:weightSum="12"
            android:orientation="horizontal"
            android:background="@drawable/card"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView

                android:layout_weight="3"
                android:text="Computer12"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#088708"
                android:textSize="16dp"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <View
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:background="#000"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_weight="3"
                android:gravity="center"
                android:id="@+id/totalQuestions"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#088708"
                android:textSize="16dp"
                android:text="Total Que 20"
                android:background="@drawable/card"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <View
                android:background="#000"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_weight="3"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#088708"
                android:textSize="16dp"
                android:text="Marks 50"
                android:background="@drawable/card"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <View
                android:background="#000"
                android:layout_width="1dp"
                android:layout_height="match_parent"></View>
            <TextView
                android:layout_weight="3"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#088708"
                android:textSize="16dp"
                android:text="Time 50"
                android:background="@drawable/card"
                android:layout_width="0dp"
                android:layout_height="40dp" />
        </LinearLayout>
     <!--   <LinearLayout
android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/Subjectivelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/Subjectivelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <Button
                android:id="@+id/SubjectiveButton"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
-->

        <LinearLayout
            android:visibility="visible"
            android:orientation="vertical"
            android:id="@+id/ObjectiveLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/Objectivelist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <Button
                android:id="@+id/ObjectiveButton"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/ObjectiveplushsubLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
          <!--  <TextView
                android:gravity="center"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textColor="#088708"
                android:textSize="18dp"
                android:text="Choose Questions From Here"
                android:background="@drawable/card"
                android:layout_width="match_parent"
                android:layout_height="40dp" />-->
            <ListView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/true_false_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <Button
                android:id="@+id/ObjectiveplushsubButton"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>


        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:id="@+id/Fillintheblanklayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ListView
                android:layout_marginTop="5dp"
                android:layout_marginBottom="60dp"
                android:id="@+id/Fillintheblanklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>
            <Button
                android:id="@+id/FillintheblankButton"
                android:layout_width="match_parent"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>