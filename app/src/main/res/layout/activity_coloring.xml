<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_padding"
    android:paddingTop="@dimen/activity_vertical_padding"
    android:paddingRight="@dimen/activity_horizontal_padding"
    android:paddingBottom="@dimen/activity_vertical_padding"
    tools:context=".student.painting.coloring.book_selection.BookSelectionMainActivity">

    <com.studybuddy.pc.brainmate.student.painting.coloring.coloring.ColoringView
        android:id="@+id/coloringView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/backButton"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/backButton"
        android:layout_toRightOf="@+id/backButton"

        android:background="@drawable/bg_view_border" />

    <ImageButton
        android:id="@+id/backButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bck_img"
        android:contentDescription="@string/content_description_back_button" />
    <!--android:src="@drawable/ic_navigate_before_white_48dp" -->
    <View
        android:id="@+id/colorPickerButton"
        style="@style/NavigationButtonStyle"
        android:layout_width="@dimen/navigation_button_size"
        android:layout_height="@dimen/navigation_button_size"
        android:layout_below="@+id/backButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_button_color_selection" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorPickerButton"
        android:text="Choose Color"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp" />

</RelativeLayout>
