<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="290dp"
    android:padding="10dp"
    android:gravity="center"
    android:background="@drawable/card"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/card"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Put Marks Here For Each Question."
            android:textColor="#434141"
            android:textSize="18dp" />
    <TextView
        android:layout_marginTop="10dp"
        android:textColor="#434141"
        android:textSize="18dp"
        android:text="Subjective *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/SubjectiveMarks"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextback"
        android:layout_width="match_parent"
        android:layout_height="45dp" />


        <TextView
        android:textColor="#434141"
        android:textSize="18dp"
        android:text="Objective *"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ObjectiveMarks"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextback"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    <TextView
        android:textColor="#434141"
        android:textSize="18dp"
        android:text="True/false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/turefalseMarks"
        android:layout_marginTop="5dp"
        android:background="@drawable/edittextback"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
        <TextView
            android:textColor="#434141"
            android:textSize="18dp"
            android:text="Fill In The Blacks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText

            android:id="@+id/Fillintheblanks"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittextback"
            android:layout_width="match_parent"
            android:layout_height="45dp" />

    <Button
        android:layout_marginTop="35dp"

        android:id="@+id/longAnswer"
        android:textColor="#fff"
        android:text="Continue"
        android:layout_gravity="bottom"
        android:background="@drawable/roundloginbutton"
        android:layout_width="match_parent"
        android:layout_height="45dp" />
    </LinearLayout>
</ScrollView>