                    <Spinner
                        android:id="@+id/TCState"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back">
                    <Spinner
                        android:id="@+id/TCCity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textColor="#fff"
                        android:textColorHint="#fff" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:background="@drawable/back">
                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/white"
                        android:textColor="@color/white"
                        android:textSize="17dp"
                        android:hint="Select Class"
                        />
                </LinearLayout>


                <EditText
                    android:id="@+id/TCSubject"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/back"
                    android:hint="Subject"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />


                <EditText
                    android:id="@+id/TCEmail"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/back"
                    android:hint="Email"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/TCSendOtp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:elevation="3dp"
                        android:visibility="visible"
                        android:background="@drawable/roundloginbutton"
                        android:text="Send OTP"
                        android:textColor="#fff" />

                    <TextView
                        android:id="@+id/TCSendOtpDis"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:elevation="3dp"
                        android:background="@drawable/round_login_btn_disable"
                        android:text="Send OTP"
                        android:textColor="#959494" />

                </LinearLayout>
                <EditText
                    android:id="@+id/edTCSendOtp"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/roundloginbutton_with_dark_boarder"
                    android:hint="Enter OTP"
                    android:visibility="gone"
                    android:inputType="phone"
                    android:maxLength="6"
                    android:layout_marginTop="10dp"
                    android:textColor="#fff"
                    android:textColorHint="#fff" />

                <Button
                    android:id="@+id/Teacherbutton"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/roundloginbutton"
                    android:text="Register"
                    android:textColor="#fff" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llShareDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/txt_share_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Do not have username password ?"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>